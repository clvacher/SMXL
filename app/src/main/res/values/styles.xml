<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">25dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_previous_item</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/SectionTitle</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.Text</item>
    </style>

    <style name="MyTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>


    <!--Styles Menu-->

    <style name="MySubheaderTheme">
        <!--item name="subheaderTitleColor">#00F</item-->
    </style>

    <style name="MySectionTheme">
        <!--item name="sectionColorIcon">#00F</item-->
        <item name="sectionColorNotification">@android:color/holo_red_light</item>
        <item name="sectionBackgroundColorSelected">#33EE511A</item>
        <!--item name="sectionBackgroundColorPressed">@color/SectionTitle</item>
        <item name="sectionBackgroundColorSelected">@color/SectionTitle</item-->
        <!--item name="sectionBackgroundColor">@color/DefaultBackgroundColor</item-->
    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <!-- Other customization -->
        <item name="drawerColor">@color/DefaultBackgroundColor</item>
        <item name="sectionStyle">@style/MySectionTheme</item>
        <item name="subheaderStyle">@style/MySubheaderTheme</item>

        <item name="colorPrimary">@color/SectionTitle</item>
        <item name="colorPrimaryDark">@color/SectionTitle</item>
        <item name="colorAccent">@color/SectionTitle</item>
    </style>

    <style name="DefaultDrawerTheme">
        <item name="sectionColorIcon">#3A74C5</item>
        <item name="sectionColorText">#3A74C5</item>
        <item name="sectionColorNotification">#3A74C5</item>
        <item name="sectionBackgroundColorPressed">#dbcbbc</item>
        <item name="sectionBackgroundColorSelected">#feacff</item>
        <item name="sectionBackgroundColor">#b9faff</item>
        <item name="sectionRippleColor">#f89d54</item>
        <!--item name="section_item_layout">@layout/layout_material_section</item-->
    </style>

</resources>