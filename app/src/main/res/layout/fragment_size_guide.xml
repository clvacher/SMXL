<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.aerolitec.SMXL.ui.fragment.SizeGuideFragment"
    android:orientation="vertical"
    android:id="@+id/size_guide_content"
    android:background="@color/DefaultBackgroundColor"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:layout_margin="20dp"
        android:id="@+id/tableSizeGarment"
        android:paddingBottom="30dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:background="@color/SectionTitle"
            android:showDividers="middle"
            >

            <TextView android:text="UE"
                android:id="@+id/headerUE"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="@dimen/section_text_size"
                android:textStyle="bold"/>

            <TextView android:text="US"
                android:id="@+id/headerUS"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="@dimen/section_text_size"
                android:textStyle="bold"/>

            <TextView android:text="UK"
                android:id="@+id/headerUK"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="@dimen/section_text_size"
                android:textStyle="bold"/>

            <TextView android:text="FR"
                android:id="@+id/headerFR"
                android:layout_column="3"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="@dimen/section_text_size"
                android:textStyle="bold"/>


            <TextView android:text="SMXL"
                android:id="@+id/headerSMXL"
                android:layout_column="4"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textSize="@dimen/section_text_size"
                android:textStyle="bold"/>

        </TableRow>

    </TableLayout>


</ScrollView>
