<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aerolitec.SMXL.ui.fragment.SettingsFragment"
    android:background="@color/DefaultBackgroundColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/SectionTitle"
        android:text="La déconnexion entraîne la perte de tous les profils."/>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/action_disconnect"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/SectionTitle"
        android:id="@+id/buttonClassicDisconnection"
        android:layout_alignBottom="@+id/login_button_settings"
        android:layout_centerInParent="true"/>


</RelativeLayout>
