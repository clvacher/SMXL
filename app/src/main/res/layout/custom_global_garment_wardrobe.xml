<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="@dimen/marginGarmentCategories"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/separator" />

    <RelativeLayout
        android:id="@+id/mainRelativeLayoutCustomGlobalGarment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/garmentLogoSize"
            android:layout_height="@dimen/garmentLogoSize"
            android:id="@+id/imageViewCustomGlobalGarment"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:src="@drawable/tshirt_lowpx"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/separator"
            android:layout_centerVertical="true"
            android:id="@+id/separator1CustomGlobalGarment"
            android:layout_toRightOf="@+id/imageViewCustomGlobalGarment"
            android:layout_toEndOf="@+id/imageViewCustomGlobalGarment"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/dots"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/separator1CustomGlobalGarment"
            android:layout_toEndOf="@+id/separator1CustomGlobalGarment"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/tshirt_sweater"
            android:textColor="@color/SectionTitle"
            android:id="@+id/textViewGarmentNameCustomGlobalGarment"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/textViewNbGarmentCustomGlobalGarment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/SectionTitle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textViewGarmentNameCustomGlobalGarment"
            android:layout_toEndOf="@id/textViewGarmentNameCustomGlobalGarment"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/dots"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/separator2CustomGlobalGarment"
            android:layout_toStartOf="@+id/separator2CustomGlobalGarment"
            android:layout_margin="20dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:id="@+id/separator2CustomGlobalGarment"
            android:background="@color/separator"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tmp"
            android:layout_toStartOf="@+id/tmp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />
        <TextView
            android:id="@+id/tmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/SectionTitle"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>

    <ListView
        android:visibility="gone"
        android:numColumns="1"
        android:id="@+id/listViewCustomGlobalGarment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <RelativeLayout
        android:id="@+id/relativeLayoutArrowCustomGlobalGarment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/DefaultBackgroundColor">
        <ImageView
            android:id="@+id/collapseCustomGlobalGarment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/expandLogoSize"
            android:src="@drawable/navigation_expand"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>