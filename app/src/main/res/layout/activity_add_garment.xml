<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AddGarmentActivity"
    tools:ignore="MergeRootFrame"
    android:background="@color/DefaultBackgroundColor">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/layoutSummary"
        android:background="@android:color/white"
        android:paddingLeft="7dp"
        android:paddingTop="7dp"
        android:paddingRight="7dp">
        <ImageView
            android:id="@+id/garmentIcon"
            android:layout_width="@dimen/size_garment_detail"
            android:layout_height="@dimen/size_garment_detail"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toRightOf="@+id/garmentIcon"
            android:layout_toEndOf="@+id/garmentIcon"
            android:layout_toLeftOf="@+id/layoutSMXL"
            android:layout_toStartOf="@+id/layoutSMXL"
            android:layout_alignBottom="@+id/garmentIcon"
            android:layout_alignTop="@+id/garmentIcon"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/garment"
                android:id="@+id/garmentType"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="@string/brand"
                android:gravity="center"
                android:id="@+id/garmentBrand" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layoutSMXL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="@dimen/size_garment_detail"
                android:layout_height="40dp"
                android:src="@drawable/groslogoinverse"
                android:id="@+id/image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textSize"
                android:textSize="50sp"
                android:hint="\?"
                android:textColor="@color/SectionTitle"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/separator"
            android:layout_below="@+id/layoutSMXL"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/layoutSummary"/>
</RelativeLayout>